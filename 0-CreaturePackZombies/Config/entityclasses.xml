<!--  Zombies by DarkStarDragon -->
		
		<entity_class name="zombieFlayed" extends="zombieTemplateMale">
		<!-- Free model from Mixamo  -->
			<property name="Tags" value="entity,zombie,normal"/>
			<property name="Mesh" value="#@modfolder:Resources/Zombiez.unity3d?ZombieDark"/> 
			<property name="WalkType" value="5"/>
			<property name="PhysicsBody" value="mixamoConvertedStandardZombie"/>
			<property name="HasDeathAnim" value="true"/>	
			<property name="Mass" value="150"/>
			<effect_group name="Base Effects"> <!-- zombieTemplateMale -->
				<passive_effect name="DistractionResistance" operation="base_set" value="0,0"/>
